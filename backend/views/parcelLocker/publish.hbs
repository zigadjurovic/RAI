<div class="container my-5">
    <div class="row">
        <div class="col-12 mb-3">
            <h1 class="text-center">Parcel Locker</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-12 col-md-6">
            <h2>Add Parcel Locker</h2>
            <form action="/parcel-lockers" method="post">
                <div class="mb-3">
                    <label for="name" class="form-label">Parcel Number/ID:</label>
                    <input type="text" id="name" name="name" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="street" class="form-label">Parcel Name:</label>
                    <input type="text" id="street" name="street" class="form-control">
                </div>
                <button type="submit" class="btn btn-primary">Add Parcel Locker</button>
            </form>
        </div>
    </div>
</div>